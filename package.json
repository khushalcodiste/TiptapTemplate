{
  "name": "ndeck",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm build:extensions && pnpm build:frontend",
    "dev": "pnpm --filter frontend dev",
    "start:dev": "pnpm --filter frontend start:dev",
    "start:prod": "pnpm --filter frontend start:prod",
    "build:frontend": "pnpm --filter frontend build",
    "build:extensions": "pnpm --filter tiptap-extensions build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "clean": "rm -rf node_modules apps/frontend/node_modules packages/extensions/node_modules",
    "clean:locks": "rm -rf pnpm-lock.yaml **/pnpm-lock.yaml",
    "clean:dist": "rm -rf node_modules apps/frontend/dist packages/extensions/dist",
    "clean:all": "pnpm clean && pnpm clean:dist",
    "install:clean": "pnpm clean:all && pnpm install",
    "install:fresh": "pnpm install:clean && pnpm build:extensions",
    "test": "jest",
    "test:extensions": "pnpm --filter tiptap-extensions test"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "resolutions": {
    "esbuild": "0.24.0"
  },
  "dependencies": {
    "@babel/eslint-plugin": "^7.25.9",
    "@cspell/eslint-plugin": "^8.16.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@svgr/webpack": "^8.1.0",
    "@swc/plugin-styled-components": "^3.0.3",
    "@tiptap/core": "^2.10.3",
    "@tiptap/extension-blockquote": "^2.10.3",
    "@tiptap/extension-bold": "^2.10.3",
    "@tiptap/extension-bullet-list": "^2.10.3",
    "@tiptap/extension-code": "^2.10.3",
    "@tiptap/extension-code-block": "^2.10.3",
    "@tiptap/extension-document": "^2.10.3",
    "@tiptap/extension-dropcursor": "^2.10.3",
    "@tiptap/extension-focus": "^2.10.3",
    "@tiptap/extension-gapcursor": "^2.10.3",
    "@tiptap/extension-hard-break": "^2.10.3",
    "@tiptap/extension-heading": "^2.10.3",
    "@tiptap/extension-history": "^2.10.3",
    "@tiptap/extension-horizontal-rule": "^2.10.3",
    "@tiptap/extension-image": "^2.10.3",
    "@tiptap/extension-italic": "^2.10.3",
    "@tiptap/extension-list-item": "^2.10.3",
    "@tiptap/extension-ordered-list": "^2.10.3",
    "@tiptap/extension-paragraph": "^2.10.3",
    "@tiptap/extension-placeholder": "^2.10.3",
    "@tiptap/extension-strike": "^2.10.3",
    "@tiptap/extension-table": "^2.10.3",
    "@tiptap/extension-table-cell": "^2.10.3",
    "@tiptap/extension-table-header": "^2.10.3",
    "@tiptap/extension-table-row": "^2.10.3",
    "@tiptap/extension-text": "^2.10.3",
    "@tiptap/extension-text-align": "^2.10.3",
    "@tiptap/extension-typography": "^2.10.3",
    "@tiptap/html": "^2.10.3",
    "@tiptap/pm": "^2.10.3",
    "@tiptap/react": "^2.10.3",
    "@tiptap/starter-kit": "^2.10.3",
    "@types/node": "^20.17.10",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "next": "^14.2.20",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "15.1.0",
